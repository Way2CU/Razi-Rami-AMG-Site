<document>
	<cms:desktop>
		<a href="$params['image']" cms:eval="href">
			<img 
				src="gallery::getThumbnailById($params['id'], null, 200,Thumbnail::CONSTRAIN_WIDTH)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				/>
		</a>	
	</cms:desktop>

	<cms:mobile>
		<img 
			src="gallery::getThumbnailById($params['id'], null, 120,Thumbnail::CONSTRAIN_BOTH)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
	</cms:mobile>	
</document>